<tal:block metal:extend-macro="base">

    <!-- css -->
    <tal:block metal:fill-slot="css">
        <link href="${request.static_path('collecting_society_portal:static/css/frontend.css')}"
                  type="text/css" rel="stylesheet" media="screen" charset="utf-8" />
    </tal:block>

    <!-- js -->
    <tal:block metal:fill-slot="js-head" />
    <tal:block metal:fill-slot="js-body">
        <script src="${request.static_path('collecting_society_portal:static/js/navbar-collapse-onclick.js')}"></script>
    </tal:block>

    <!-- content -->
    <tal:block metal:fill-slot="content">

        <!-- slot: top -->
        <tal:block metal:define-slot="top" />

        <!-- columns -->
        <div class="cs-content cs-frontend container">

            <!-- column left -->
            <div class="cs-content-left col-sm-4 col-md-3">
                <div class="fixed-col-3">

                    <!-- logo -->
                    <a href="${request.resource_path(context)}">
                        <img tal:attributes="src context.registry['static']['logo']"
                             class="cs-logo img-responsive cs-img-center" />
                    </a>

                    <!-- slot: content left-->
                    <tal:block metal:define-slot="content-left" />

                    <!-- static content -->
                    <div class="cs-widget hidden-xs hidden-sm">
                        <h4 class="cs-red" i18n:translate="">adore Plugin*</h4>
                        <span i18n:translate="">The beta version will be based on the</span> <b i18n:translate="">Clementine music player</b>. <span i18n:translate="">As soon as the news for the beta launch is out, please</span> <a href="https://www.clementine-player.org/en/" i18n:translate="">download it here</a>. <span i18n:translate="">Instructions on where to get and how to seamlessly install the</span> <span class="cs-red">adore</span> <span i18n:translate="">plugin will be available right here on this site</span>.
                    </div>
                    <img src="${request.static_path('collecting_society_portal:static/img/plugin-clementine.png')}" class="img-responsive hidden-xs hidden-sm"></img>

                </div>
            </div>

            <!-- column right -->
            <div class="cs-content-right col-sm-8 col-md-3 col-md-push-6">
                <div class="fixed-col-3">

                    <!-- slot: content right -->
                    <tal:block metal:define-slot="content-right" />

                </div>
            </div>

            <div class="clear hidden-md hidden-lg"></div>

            <!-- column middle -->
            <div class="cs-content-middle col-sm-12 col-md-6 col-md-pull-3">

                <!-- alerts -->
                <div tal:condition="request.session.peek_flash('main-alert-success')"
                     class="alert alert-success" role="alert">
                    <p tal:repeat="message request.session.pop_flash('main-alert-success')">
                        ${message}
                    </p>
                </div>
                <div tal:condition="request.session.peek_flash('main-alert-info')"
                     class="alert alert-info" role="alert">
                    <p tal:repeat="message request.session.pop_flash('main-alert-info')">
                        ${message}
                    </p>
                </div>
                <div tal:condition="request.session.peek_flash('main-alert-warning')"
                     class="alert alert-warning" role="alert">
                    <p tal:repeat="message request.session.pop_flash('main-alert-warning')">
                        ${message}
                    </p>
                </div>
                <div tal:condition="request.session.peek_flash('main-alert-danger')"
                    class="alert alert-danger" role="alert">
                    <p tal:repeat="message request.session.pop_flash('main-alert-danger')">
                        ${message}
                    </p>
                </div>

                <!-- slot: content middle -->
                <tal:block metal:define-slot="content-middle" />

            </div>

        </div>

    </tal:block>


</tal:block>
